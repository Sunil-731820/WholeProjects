package JavaIO;

import java.io.BufferedInputStream;
import java.io.File;
import java.io.IOException;

public class FilterInputStream {
	public static void main(String[] args) throws IOException {  
        File data = new File("C:\\Users\\sunilg\\Desktop\\FileRelatedParts\\JavaIO\\test.txt");  
        java.io.FileInputStream  file = new java.io.FileInputStream(data);  
        java.io.FilterInputStream filter = new java.io.BufferedInputStream(file);  
        int k =0;  
        while((k=filter.read())!=-1){  
            System.out.print((char)k);  
        }  
        file.close();  
        filter.close();  
    }  

}
